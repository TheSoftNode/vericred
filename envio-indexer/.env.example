# VeriCred+ Enterprise Indexer Environment Configuration
# Copy this file to .env and update with your actual values

# =====================================================
# MONAD TESTNET CONFIGURATION
# =====================================================

# Monad Testnet Chain Configuration
MONAD_HYPERSYNC_URL=https://testnet-rpc.monad.xyz
ENVIO_CHAIN_ID=10143

# VeriCred Smart Contract Addresses (update after deployment)
VERICRED_SBT_ADDRESS=0x0000000000000000000000000000000000000001
CREDENTIAL_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000002

# =====================================================
# ENVIO CONFIGURATION
# =====================================================

# Envio HyperSync API Configuration
ENVIO_API_TOKEN=your_envio_api_token_here
ENVIO_HYPERSYNC_URL=https://monad-testnet.hypersync.xyz

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/vericred_indexer
REDIS_URL=redis://localhost:6379

# =====================================================
# PERFORMANCE & MONITORING
# =====================================================

# Indexing Performance
ENVIO_BATCH_SIZE=1000
ENVIO_CONCURRENCY=10
ENVIO_MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# =====================================================
# PRODUCTION SETTINGS
# =====================================================

# Enable for production deployment
NODE_ENV=development
ENABLE_CORS=true
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# =====================================================
# INTEGRATION SETTINGS
# =====================================================

# Backend Integration
BACKEND_API_URL=http://localhost:3000
BACKEND_API_KEY=your_backend_api_key

# Notification Services (optional)
WEBHOOK_URL=https://your-app.com/webhooks/envio
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# =====================================================
# ADVANCED CONFIGURATION
# =====================================================

# Multi-chain Settings (for future expansion)
ENABLE_MULTICHAIN=true
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
POLYGON_RPC_URL=https://polygon-rpc.com
BASE_RPC_URL=https://mainnet.base.org

# Cache Settings
CACHE_TTL=300
ENABLE_PERSISTENT_CACHE=true

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100